{
	"$schema": "https://json.schemastore.org/tsconfig",
	"_version": "23.0.0",

	"compilerOptions": {
		"lib": ["es2024"],
		"module": "nodenext",
		"target": "es2024",
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"]
		},
		"strict": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node16",
		"types": ["vitest/globals"],
	},
	"include": ["src/**/*.ts", "src/**/*.spec.ts"]
}
